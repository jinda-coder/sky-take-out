<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">

    <insert id="insert">
        insert into dish_flavor (dish_id,name,value) values 
         <foreach collection="flavors" separator="," item="flavor">
             (#{flavor.dishId},#{flavor.name},#{flavor.value})
         </foreach>
    </insert>
    <select id="selectByDishId" resultType="com.sky.entity.DishFlavor">
        select * from dish_flavor where dish_id = #{id}
    </select>
    <select id="getByDishId" resultType="com.sky.entity.DishFlavor">
            select * from dish_flavor where dish_id = #{id}
    </select>

    <delete id="delete">
        delete from dish_flavor where dish_id = #{id}
    </delete>
</mapper>